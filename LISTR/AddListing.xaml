            Foreground="#a10000"
            MouseDown="ImgMouseDown"
            Visibility="Hidden" />
        <Label
            x:Name="img3_label"
            Grid.Row="3"
            Grid.Column="1"
            Margin="386,138,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="X"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#a10000"
            MouseDown="ImgMouseDown"
            Visibility="Hidden" />
        <Label
            x:Name="img4_label"
            Grid.Row="3"
            Grid.Column="1"
            Margin="478,138,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="X"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#a10000"
            MouseDown="ImgMouseDown"
            Visibility="Hidden" />
        <Label
            x:Name="img5_label"
            Grid.Row="3"
            Grid.Column="1"
            Margin="568,138,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="X"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#a10000"
            MouseDown="ImgMouseDown"
            Visibility="Hidden" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="855,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="*"
            FontSize="20"
            Foreground="Red" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="813,343,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="*"
            FontSize="20"
            Foreground="Red" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="771,247,0,0"
