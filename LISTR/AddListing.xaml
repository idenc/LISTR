        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="809,193,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="*"
            FontSize="20"
            Foreground="Red" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="1041,38,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="*"
            FontSize="20"
            Foreground="Red" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="1053,40,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="mandatory field"
            FontSize="16" />
    </Grid>
</Page>
