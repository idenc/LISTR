        </Grid.ColumnDefinitions>
        <Image
            Grid.Row="3"
            Grid.Column="1"
            Height="43"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="resources/realtyLogoSmall.png" Margin="30,101,0,0" />
